{
  "name": "budgetzero",
  "version": "0.1.22",
  "scripts": {
    "dev": "vite",
    "tempdb": "pouchdb-server --in-memory --port 5984",
    "devdb": "run-p dev tempdb",
    "build": "vite build",
    "serve": "vite preview",
    "test:unit": "vue-cli-service test:unit --silent",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "electron:build": "vue-cli-service electron:build --publish always",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "test-watch:unit": "vue-cli-service test:unit --watch --silent",
    "test:cypress": "cypress run",
    "test": "vitest",
    "vitest": "vitest run --coverage"
  },
  "main": "background.js",
  "dependencies": {
    "@vue/compat": "^3.3.4",
    "chart.js": "^3.3.2",
    "electron-updater": "^4.3.9",
    "file-saver": "^2.0.5",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-ofx-parser": "^0.5.1",
    "number-to-base64": "^1.0.5",
    "pouchdb": "^7.2.2",
    "pouchdb-authentication": "^1.1.3",
    "pouchdb-browser": "^7.2.2",
    "pouchdb-erase": "^1.0.2",
    "pouchdb-find": "^6.2.0",
    "pouchdb-live-find": "^0.4.0",
    "vue": "^3.3.4",
    "vue-csv-import": "^3.3.10",
    "vue-papa-parse": "^3.1.0",
    "vue-router": "^4.2.4",
    "vuedraggable": "^2.24.3",
    "vuelidate": "^0.7.6",
    "vuetify": "^3.3.15",
    "vuex": "^4.1.0",
    "worker-pouch": "^2.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@4tw/cypress-drag-drop": "^2.2.4",
    "@vitejs/plugin-vue": "^4.3.4",
    "babel-plugin-transform-remove-console": "6.9.4",
    "cypress": "^12.15.0",
    "electron": "^16.0.6",
    "electron-builder": "22.10.5",
    "electron-devtools-installer": "3.2.0",
    "electron-icon-builder": "2.0.1",
    "eslint": "^8.22.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^8.7.1",
    "eslint-plugin-vuetify": "^2.0.5",
    "lint-staged": "11.2.6",
    "npm-run-all": "^4.1.5",
    "pouchdb-server": "^4.2.0",
    "prettier": "^2.7.1",
    "sass": "^1.32.6",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.4.9",
    "vite-plugin-vuetify": "^1.0.2",
    "vitest": "^0.22.1",
    "vue-cli-plugin-electron-builder": "2.1.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended",
      "@vue/airbnb"
    ],
    "rules": {
      "func-names": "off",
      "no-console": "off",
      "linebreak-style": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ]
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "post-push": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BudgetZero/BudgetZero"
  }
}
